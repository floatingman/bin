    <table>
    <thead>
        <tr>
            <th></th>
            <th>Category</th>
            <th>Mode</th>
            <!--#if $script_list#--><th>Script</th><!--#end if#-->
            <th>Folder/Path</th>
            <th><!--#if $varExists('newzbinDetails') then "NewzBin/Groups" else "Groups"#--></th>
            <th></th>
        </tr>
    </thead>
    <!--#set $odd = False#--><tbody>
    <!--#for $slot in $slotinfo#-->
        <!--#set $odd = not $odd#-->
        <tr id="<!--#if $slot.name#-->$slot.name<!--#else#-->newcat<!--#end if#-->" class="<!--#if $odd then "odd" else "even"#-->">

        <td><!--#if $slot.name#-->
            

            <input type="submit" value="X" onclick="javascript:lr('config/categories/delete','session=$session&name=<!--#if $slot.name#-->$slot.name<!--#else#-->newcat<!--#end if#-->')">
  
            
            <!--#end if#-->
        </td>

 
        
            <td>
                <input type="hidden" value="$slot.name" name="name">
                <input type="text" name="newname" value="$slot.name">
                <input type="hidden" name="session" value="$session">
            </td>

            <td><select name="pp">
                <option value=""  <!--#if $slot.pp == ""  then "selected" else ""#-->>Default</option>
               <option value="0" <!--#if $slot.pp == "0" then "selected" else ""#-->></option>
               <option value="1" <!--#if $slot.pp == "1" then "selected" else ""#-->>R</option>
               <option value="2" <!--#if $slot.pp == "2" then "selected" else ""#-->>U</option>
               <option value="3" <!--#if $slot.pp == "3" then "selected" else ""#-->>D</option>
               </select>
            </td>

            <!--#if $script_list#-->
                <td><select name="script">
                    <!--#for $sc in $script_list#-->
                        <option value="$sc" <!--#if $slot.script.lower() == $sc.lower() then "selected" else ""#-->>$sc</option>
                    <!--#end for#-->
                    </select>
                </td>
            <!--#end if#-->

            <td><input type="text" size=35 name="dir" value="$slot.dir"></td>
            
            <td><input type="text" size=35 name="newzbin" value="$slot.newzbin"></td>

            <td><input type="submit" value="Save" onclick="javascript:submitconfig('config/categories/save', 'submitstatus','<!--#if $slot.name#-->$slot.name<!--#else#-->newcat<!--#end if#-->'<!--#if not $slot.name#-->,'1'<!--#end if#-->)">
            </td>
</tr>

    <!--#end for#--></tbody>
    </table>

<span class="submitstatus" id="submitstatus"></span>

